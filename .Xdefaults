URxvt*termName: screen-256color
URxvt*loginShell: true
URxvt*scrollColor: #777777
URxvt*scrollstyle: plain
URxvt*colorUL: yellow
URxvt*underlineColor: yellow

!URxvt*font: xft:Bitstream Vera Sans:pixelsize=12:antialias=false:hinting=true

!URxvt*font: xft:monaco:pixelsize=12:antialias=true:hinting=true
!URxvt*boldFont: xft:monaco:pixelsize=12:antialias=true:hinting=true

!URxvt*font: xft:Source Code Pro:size=9:antialias=true:hinting=true
!URxvt*boldFont: xft:Source Code Pro Medium:size=10:antialias=false:hinting=true

!URxvt*font: xft:teminus:size=9:antialias=true:hinting=true
!URxvt*boldFont: xft:teminus:size=9:antialias=true:hinting=true

URxvt*font: xft:Inconsolata:size=12:antialias=true:hinting=true
URxvt*boldFont: xft:Inconsolata:size=12:antialias=true:hinting=true

!URxvt.letterSpace: -2
!URxvt*boldFont: xft:Source Code Pro Light:size=9:antialias=true:hinting=true
!URxvt*font: xft:Source Code Pro:Medium:pixelsize=13:antialias=true:hinting=true
!URxvt*boldFont: xft:Source Code Pro:pixelsize=13:antialias=true:hinting=true

URxvt.borderColor: #01a252
URxvt.internalBorder: 1

URxvt*transparent: true
URxvt*shading: 10 
URxvt.scrollBar: false

URxvt.background: #090300
URxvt.foreground: #a5a2a2
URxvt.color0:	#090300
URxvt.color1:	#db2d20
URxvt.color2:	#01a252
URxvt.color3:	#fded02
URxvt.color4:	#01a0e4
URxvt.color5:	#a16a94
URxvt.color6:	#b5e4f4
URxvt.color7:	#a5a2a2
URxvt.color8:	#5c5855
URxvt.color9:	#db2d20
URxvt.color10:	#01a252
URxvt.color11:	#fded02
URxvt.color12:	#01a0e4
URxvt.color13:	#a16a94
URxvt.color14:	#b5e4f4
URxvt.color15:	#f7f7f7


! === rofi ===

rofi.modi:                           ssh,window,drun,run
rofi.sidebar-mode:                   false
rofi.terminal:                       urxvt
rofi.ssh-client:                     ssh
rofi.ssh-command:                    {terminal} -e "{ssh-client} {host}"
rofi.opacity:                        100
rofi.width:                          50
rofi.lines:                          12 
rofi.columns:                        1
rofi.font:                           Inconsolata 12

! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: #090300,  #01a252,  #090300,  #01a252,  #090300
rofi.color-normal: #090300,  #01a252,  #090300,  #01a252,  #090300
rofi.color-normal: #090300,  #01a252,  #090300,  #01a252,  #090300

!                  'background', 'border'
rofi.color-window: #090300,      #090300
rofi.bw:                             10
rofi.location:                       0
rofi.padding:                        5
rofi.levenshtein-sort:               true
rofi.case-sensitive:                 false
rofi.fuzzy:                          false
rofi.line-margin:                    2
rofi.separator-style:                solid
rofi.hide-scrollbar:                 true
rofi.markup-rows:                    false
rofi.scrollbar-width:                8
